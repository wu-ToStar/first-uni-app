.around {
	height: 50px;
	width: 50px;
	margin-top: 12px;
	-webkit-animation: rotate 1.5s infinite linear 0.2s;
	        animation: rotate 1.5s infinite linear 0.2s;
}
@-webkit-keyframes rotate {
0% {
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100% {
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
@keyframes rotate {
0% {
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100% {
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
.add {
	width: 12px;
	height: 12px;
	border-radius: 50%;
	background-color: red;
	position: absolute;
	bottom: -9px;
	left: 20px;
	text-align: center;
	line-height: 12px;
	color: #fff;
	font-size: 10px;
}

